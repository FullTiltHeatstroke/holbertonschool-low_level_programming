#include "main.h"

void print_triangle(int size)
{
  int x = 0;
  int y = 0; 

    for (x = 0; x <= size; x++)
      {
	for (y = 0; y < 2 * (size - x) - 1; y++)
	  {
	  _putchar(' ');
	  }
	for (y = 0; y <= x; y++)
	  {
	    _putchar("# ");
	  }
	_putchar('\n');
      }
    if (size <= 0)
      _putchar('\n'); 
}
